{% extends 'base.html.twig' %}

{% block title %}New Contact{% endblock %}

{% block body %}

    <div class="container pb-5">

        <div class="col-12 d-flex justify-content-between border-bottom mt-5">
                <h1 class="text-uppercase text-start mb-0">Nouveau Contact</h1>
        </div>

        {{ form_start(form) }}
        <div class="m-3 mt-5">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.name) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.linkedin) }}</div>

            </div>

        </div>

        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.phone) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.email) }}</div>
            </div>
        </div>

        <div class="m-3">
            <div class="col d-flex align-items-center justify-content-center">
                <button class="button me-5 rounded-3 px-3"><i class="fas fa-save me-3"></i>{{ button_label|default('Enregistrer') }}</button>
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_contact_index') }}"><i class="me-3 fas fa-caret-square-left"></i>Retour</a>
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
