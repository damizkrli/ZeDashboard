{% extends 'base.html.twig' %}

{% block title %}{{ apply_for.jobTitle }} - {{ apply_for.company }}{% endblock %}

{% block body %}

    <div class="container pb-5">

        <div class="col-12 d-flex justify-content-between border-bottom mt-5 mb-5">
            <h1 class="text-uppercase text-start mb-0">{{ apply_for.jobTitle }} chez {{ apply_for.company }}</h1>
        </div>

        {{ form_start(form) }}
        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.jobTitle) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.contact) }}</div>
            </div>
        </div>

        <div class="m-3 mt-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.sent) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.response) }}</div>
            </div>
        </div>

        <div class="m-3">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-lg-4 col-12">
                        {{ form_row(form.platform) }}
                        <small><a href="{{ path('app_platform_index') }}">Vous ne trouver pas votre plateforme ?</a></small>
                    </div>
                    <div class="col-lg-4 col-12">
                        {{ form_row(form.company) }}
                        <small><a href="{{ path('app_company_index') }}">Vous ne trouver pas votre entreprise ?</a></small>
                    </div>
                </div>
            </div>

            <div class="m-3">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-lg-4 col-12">{{ form_row(form.link) }}</div>
                    <div class="col-lg-4 col-12">{{ form_row(form.status) }}</div>
                </div>
            </div>

            <div class="m-3">
                <div class="col d-flex align-items-center justify-content-center">
                    <button class="button me-5 hover-underline-animation-navbar a-navbar"><i class="fas fa-save me-3"></i>{{ button_label|default('Enregistrer') }}</button>
                    <a class="button me-5 hover-underline-animation-navbar a-navbar" href="{{ path('app_apply_for_index') }}"><i class="me-3 fas fa-caret-square-left"></i>Retour</a>
                </div>
            </div>

            {{ form_end(form) }}
    </div>
{% endblock %}
