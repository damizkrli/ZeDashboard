{% extends 'base.html.twig' %}

{% block title %}Nouvelle Candidature{% endblock %}

{% block body %}

        <div class="col-12 d-flex justify-content-between border-bottom my-5 px-5 triangle-bottom-left">
            <h1 class="text-uppercase text-start mb-0">Ajouter une candidature</h1>
            <small class="d-flex align-items-end justify-content-end">
                <a class="mini-link" href="{{ path('app_apply_for_index') }}">Voir mes candidatures</a>
            </small>
        </div>

        {{ form_start(form) }}
        <div class="m-3 mt-5">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-3 col-12">{{ form_row(form.jobTitle) }}</div>
                <div class="col-lg-3 col-12">{{ form_row(form.contact) }}</div>
                <div class="col-lg-3 col-12">{{ form_row(form.link) }}</div>
            </div>
        </div>

        <div class="m-3 mt-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-3 col-12">{{ form_row(form.sent) }}</div>
                <div class="col-lg-3 col-12">{{ form_row(form.response) }}</div>
                <div class="col-lg-3 col-12">{{ form_row(form.status) }}</div>
            </div>
        </div>

        <div class="m-3 mt-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-3 col-12">{{ form_row(form.platform) }}</div>
                <div class="col-lg-3 col-12">{{ form_row(form.company) }}</div>
            </div>
        </div>

        <div class="m-3 mt-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-8 col-12">{{ form_row(form.note) }}</div>
            </div>
        </div>

        <div class="m-3 mt-3">
            <div class="col d-flex align-items-center justify-content-center">
                <button class="button me-5 hover-underline-animation-navbar a-navbar"><i class="fas fa-save me-3"></i>{{ button_label|default('Enregistrer') }}</button>
                <a class="button me-5 hover-underline-animation-navbar a-navbar" href="{{ path('app_apply_for_index') }}"><i class="me-3 fas fa-caret-square-left"></i>Retour</a>
            </div>
        </div>

        {{ form_end(form) }}


{% endblock %}
