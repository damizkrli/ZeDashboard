{% extends 'base.html.twig' %}

{% block title %}Nouvelle Candidature{% endblock %}

{% block body %}

    <div class="col px-5">
        <h1 class="mt-5 ms-5 mb-3">Ajouter une candidature</h1>
        {{ form_start(form) }}
        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-8 col-12">{{ form_row(form.jobTitle) }}</div>
            </div>

        </div>

        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">
                    {{ form_row(form.platform) }}
                    <small><a href="{{ path('app_platform_index') }}">Vous ne trouver pas votre plateforme ?</a></small>
                </div>
                <div class="col-lg-4 col-12">
                    {{ form_row(form.company) }}
                    <small><a href="{{ path('app_company_index') }}">Vous ne trouver pas votre entreprise ?</a></small>
                </div>
            </div>
        </div>

        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.contact) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.details) }}</div>
            </div>
        </div>

        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.link) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.status) }}</div>
            </div>
        </div>

        <div class="m-3">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-lg-4 col-12">{{ form_row(form.dateApplyFor) }}</div>
                <div class="col-lg-4 col-12">{{ form_row(form.dateReturn) }}</div>
            </div>
        </div>

        <div class="m-3">
            <div class="col d-flex align-items-center justify-content-center">
                <button class="button me-5 rounded-3 px-3"><i class="fas fa-save me-3"></i>{{ button_label|default('Enregistrer') }}</button>
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_apply_for_index') }}">Retour</a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
