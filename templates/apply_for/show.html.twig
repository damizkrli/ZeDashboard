{% extends 'base.html.twig' %}

{% block title %}ApplyFor{% endblock %}

{% block body %}
    <h1>ApplyFor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ apply_for.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ apply_for.company }}</td>
            </tr>
            <tr>
                <th>Platform</th>
                <td>{{ apply_for.platform }}</td>
            </tr>
            <tr>
                <th>DateApplyFor</th>
                <td>{{ apply_for.dateApplyFor ? apply_for.dateApplyFor|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateReturn</th>
                <td>{{ apply_for.dateReturn ? apply_for.dateReturn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>JobTitle</th>
                <td>{{ apply_for.jobTitle }}</td>
            </tr>
            <tr>
                <th>IsRetained</th>
                <td>{{ apply_for.isRetained ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ apply_for.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_apply_for_index') }}">back to list</a>

    <a href="{{ path('app_apply_for_edit', {'id': apply_for.id}) }}">edit</a>

    {{ include('apply_for/_delete_form.html.twig') }}
{% endblock %}
