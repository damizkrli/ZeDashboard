{% extends 'base.html.twig' %}

{% block title %}Work DashBoard{% endblock %}

{% block body %}
    <section>
        <div class="container-fluid">

            <div class="row">

                {# LES LIENS #}
                <div class="col-2 border-end border-success mt-4" id="scroll">

                    <h1>
                        <a href="{{ path('app_note_index') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="action-icon">
