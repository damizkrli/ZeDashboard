                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Mes Liens
                        </a>
                    </h1>

                    <h5 class="text-decoration-underline">
                        <a href="{{ path('app_index_pro_link') }}">Liens Professionnels</a>
                    </h5>
                    {% for proLinks in proLink %}
                        <ul>
                            <li><a class="btn-outline-info p-2" href="{{ proLinks.link }}" target="_blank">
                                    {{ proLinks.name }}
                                </a>
                            </li>
                        </ul>
                    {% endfor %}

                    <h5 class="text-decoration-underline">
                        <a href="#">Lien Techniques</a>
                    </h5>
{#                      {% for techLinks in techLink %}#}
                            <ul>
                                {#<li>
                                    <a href="{{ tecLink.link }}">{{ techLink.name }}</a>
                                  </li>#}
                            </ul>
{#                      {% endfor %}#}

                    <h5 class="text-decoration-underline">
                        <a href="#">Liens personnels</a>
                    </h5>
{#                      {% for persoLinks in persoLink %}#}
                            <ul>
                                {#<li>
                                    <a class="link-perso" href="{{ persoLink.link }}" target="_blank">{{ persoLink.name }}</a>
                                  </li>#}
                            </ul>
{#                      {% endfor %}#}
                </div>

                {# NOTES #}
                <div class="col mt-4 px-5 border-end border-info" id="scroll">
                    <h1>
                        <a href="{{ path('app_note_index') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="action-icon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Mes notes
                        </a>
                    </h1>

                    {% for notes in note %}

                        <h3>{{ notes.name }}</h3>
                        <div class="border border-info rounded-0 p-3 mb-3">
                            {% if '/https/' %}
                                <p>{{ notes.note | raw }}</p>
                        {% endif %}
                    </div>
                    {% endfor %}

                </div>

                {# MES CANDIDATURES #}
                <div class="col mt-4 px-5 order-last" id="scroll">
                    <h1>
                        <a href="{{ path('app_apply_for_new') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="action-icon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>

                            Mes candidatures
                        </a>
                    </h1>
                    {% for appliesFor in apply_for|sort((a, b) => b.id <=> a.id) %}
                        <div class="card shadow mb-4 rounded-1 bg-transparent">
                            <div class="card-header">
                                <h5 class="card-title">
                                    <div class="d-flex bd-highlight">
                                        <p class="p-2 w-75 bd-highlight">
                                            {{ appliesFor.jobTitle }} chez {{ appliesFor.company.name }}
                                            <small class="fst-italic">via {{ appliesFor.platform.name }}</small>
                                        </p>

                                        <div class="p-2 flex-shrink-1 bd-highlight">
                                            {% if appliesFor.status is same as 'Transmise' %}
                                                <div class="bg-info p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'Refusée' %}
                                                <div class="bg-danger p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'Acceptée' %}
                                                <div class="bg-secondary p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'En Attente' %}
                                                <div class="bg-danger p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'Sans réponse' %}
                                                <div class="bg-info p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'Entretien' %}
                                                <div class="bg-warning p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% elseif appliesFor.status is same as 'Entretien Tech' %}
                                                <div class="bg-warning p-2 rounded-3">{{ appliesFor.status }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </h5>
                            </div>
                            <div class="card-body">
                                {% if appliesFor.name %}
                                    <p class="card-text">Personne à contacter : {{ appliesFor.name }}</p>
                                {% else %}
                                {% endif %}

                                {# Details #}
                                {% if appliesFor.details %}
                                    <p class="card-text">Coordonnées : {{ appliesFor.details }}</p>
                                {% else %}

                                {% endif %}

                                <p>Date de candidature : <span
                                            class="fst-italic">{{ appliesFor.dateApplyFor|date('d/m/Y') }}</span>
                                </p>
                                {% if appliesFor.dateReturn is null %}

                                {% else %}
                                    <p>Date du retour de l'entreprise : <span
                                                class="fst-italic">{{ appliesFor.dateReturn|date('d/m/Y') }}</span></p>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a class="btn border-0" href="{{ path('app_apply_for_edit', {'id': appliesFor.id}) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="green" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <form method="post" action="{{ path('app_apply_for_delete', {'id': appliesFor.id}) }}" onsubmit="return confirm('Êtes_vous sur de vouloir supprimer cette candidature ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appliesFor.id) }}">
                                            <button class="btn border-0">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="red" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                    <a href="{{ appliesFor.link }}" target="_blank"
                                       class="btn btn-sm btn-outline-success rounded-0">
                                        Lien vers l'annonce</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="mb-5">
                        <a class="btn btn-sm btn-outline-success rounded-0" href="#">Exporter en PDF</a>
                        <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_platform_index') }}">Ajouter une plateforme</a>
                        <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_company_index') }}">Ajouter une entreprise</a>
                    </div>
                </div>

            </div>

        </div>
    </section>
{% endblock %}