{% extends 'base.html.twig' %}

{% block title %}Work DashBoard{% endblock %}

{% block body %}
    <section>
        <div class="container-fluid">

            <div class="row">

                {# LES LIENS #}
                <div class="col-2 border-end border-dark mt-4" id="scroll">
                    <ul>
                        <h5 class="text-decoration-underline">Liens Professionnels</h5>
                        <li><a class="link-pro" href="https://candidat.pole-emploi.fr/espacepersonnel/" target="_blank">
                                Pôle Emploi
                            </a>
                        </li>
                        <li><a class="link-pro" href="https://www.hellowork.com/fr-fr/" target="_blank">Hello Work</a>
                        </li>
                        <li><a class="link-pro" href="https://fr.indeed.com/" target="_blank">Indeed</a></li>
                        <li><a class="link-pro" href="https://www.linkedin.com/" target="_blank">LinkedIn</a></li>
                        <li><a class="link-pro" href="https://www.welcometothejungle.com/fr" target="_blank">Welcome To
                                the Jungle</a></li>
                        <li>
                            <a class="link-pro"
                               href="https://www.talent.io/p/fr-fr/home?utm_source=google&utm_medium=cpc&utm_campaign=%5BS%5D-FR-France-Candidates-FullStack"
                               target="_blank">Talent.io</a></li>
                        <li>
                            <a class="link-pro" href="https://www.lesjeudis.com/" target="_blank">Les Jeudis</a></li>
                        <hr>
                        <h5 class="text-decoration-underline">Lien Techniques</h5>
                        <li><a class="link-tech" href="">Github</a></li>
                        <li><a class="link-tech" href="">Gitlab</a></li>
                        <li><a class="link-tech" href="">CodeWars</a></li>
                        <li><a class="link-tech" href="">CodinGame</a></li>
                        <li><a class="link-tech" href="">Symfony</a></li>
                        <li><a class="link-tech" href="">Symfony Cast</a></li>
                        <li><a class="link-tech" href="">PHP</a></li>
                        <li><a class="link-tech" href="">Twig</a></li>
                        <hr>
                        <h5 class="text-decoration-underline">Liens personnels</h5>
                        <li><a class="link-perso" href="https://www.google.fr" target="_blank">Google</a></li>
                    </ul>
                </div>

                {# AUTRES #}
                <div class="col mt-4 px-5 border-end border-dark" id="scroll">
                    <h1>
                        <a href="{{ path('app_motivation_index') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24"
                                 stroke="green" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Lettre de Motivation
                        </a>
                    </h1>
                    <div class="border border-dark rounded-3 p-3 mb-3">
                        {% for motivations in motivation %}
                            <p>{{ motivations.letter }}</p>
                        {% endfor %}
                    </div>

                </div>

                {# MES CANDIDATURES #}
                <div class="col mt-4 px-5 order-last" id="scroll">
                    <h1>
                        <a href="{{ path('app_apply_for_new') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Mes Candidatures
                        </a>
                    </h1>
                    {% for appliesFor in apply_for|sort((a, b) => b.id <=> a.id) %}
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h5 class="card-title">
                                    <div class="d-flex bd-highlight">
                                        <div class="p-2 w-75 bd-highlight">
                                            {% if appliesFor.platform %}
                                                <p> {{ appliesFor.platform }} | {{ appliesFor.company }}
                                                    | {{ appliesFor.jobTitle }}</p>
                                            {% else %}
                                                <p> {{ appliesFor.company }} | {{ appliesFor.jobTitle }}</p>
                                            {% endif %}
                                        </div>

                                        <div class="p-2 flex-shrink-1 bd-highlight">
                                            {% if appliesFor.status is same as 'Transmise' %}
                                                <div class="green">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'Refusée' %}
                                                    <div class="red">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'Acceptée' %}
                                                    <div class="coral">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'En Attente' %}
                                                    <div class="velvet">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'Sans réponse' %}
                                                    <div class="black">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'Entretien' %}
                                                    <div class="red">{{ appliesFor.status }}</div>
                                                {% elseif appliesFor.status is same as 'Entretien Tech' %}
                                                    <div class="red">{{ appliesFor.status }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </h5>
                            </div>
                            <div class="card-body">
                                {% if appliesFor.platform %}
                                    <p class="card-text">Nom de la plateforme : {{ appliesFor.platform }}</p>
                                {% else %}

                                {% endif %}
                                <p>Date de candidature : <span
                                            class="fst-italic">{{ appliesFor.dateApplyFor|date('d/m/Y') }}</span>
                                </p>
                                {% if appliesFor.dateReturn is null %}

                                {% else %}
                                    <p>Date du retour de l'entreprise : <span
                                                class="fst-italic">{{ appliesFor.dateReturn|date('d/m/Y') }}</span></p>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a class="btn border-0" href="{{ path('app_apply_for_edit', {'id': appliesFor.id}) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="green" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <form method="post" action="{{ path('app_apply_for_delete', {'id': appliesFor.id}) }}" onsubmit="return confirm('Êtes_vous sur de vouloir supprimer cette candidature ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appliesFor.id) }}">
                                            <button class="btn border-0">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="red" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                    <a href="{{ appliesFor.link }}" target="_blank"
                                       class="btn btn-sm btn-outline-dark ">
                                        Lien vers l'annonce</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <a class="btn btn-sm btn-outline-dark" href="#">Exporter en PDF</a>
                </div>

            </div>

        </div>
    </section>
{% endblock %}