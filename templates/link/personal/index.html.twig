{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}
    <section>
        <div class="col px-5 pb-5">
            <h1 class="title">
                <i class="fas fa-user-tie me-3"></i>
                Mes liens personnels</h1>

            <div class="mt-3 mb-3 d-flex align-items-start justify-content-start">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_add_perso_link') }}">
                    <i class="fas fa-plus-square me-3"></i>
                    Ajouter un lien
                </a>

                <a class="button rounded-3 px-3" href="{{ path('app_link_index') }}">
                    <i class="me-3 fas fa-caret-square-left"></i>
                    Retour
                </a>
            </div>

            <table class="table table-borderless">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>URL</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for perso in persos %}
                    <tr>
                        <td>{{ perso.name }}</td>
                        <td class="size">{{ perso.url }}</td>
                        <td>
                            <div class="d-flex align-items-center justify-content-start">
                                <form method="post" action="{{ path('app_delete_pro_link', {'id': perso.id}) }}"
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <a href="{{ path('app_edit_perso_link', {'id': perso.id}) }}">
                                        <i class="action fas fa-pen-square me-3"></i>
                                    </a>
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ perso.id) }}">
                                    <button class="btn border-0 pt-0"><i class="action fas fa-trash"></i></button>
                                </form>
                            </div>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            <h2 class="fst-italic p-3">
                                <i class="fa fa-arrow-down"></i> Commencez par ajouter un lien
                            </h2>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-3 mb-3 d-flex align-items-start justify-content-start">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_add_pro_link') }}">
                    <i class="fas fa-plus-square me-3"></i>
                    Ajouter un lien
                </a>

                <a class="button rounded-3 px-3" href="{{ path('app_link_index') }}">
                    <i class="me-3 fas fa-caret-square-left"></i>
                    Retour
                </a>
            </div>

        </div>
    </section>

{% endblock %}
