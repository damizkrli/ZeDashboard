{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes liens personnels</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>URL</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for perso in persos %}
                <tr>
                    <td>{{ perso.name }}</td>
                    <td>{{ perso.url }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-start">
                            <a class="green-button me-2" href="{{ path('app_edit_perso_link', {'id': perso.id}) }}"><i class="fa fa-scissors"></i></a>
                            <form method="post" action="{{ path('app_delete_perso_link', {'id': perso.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ perso.id) }}">
                                <button class="red-button"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        <h2 class="fst-italic p-3" style="color: whitesmoke">
                            <i class="fa fa-arrow-down"></i> Commencez par ajouter un lien
                        </h2>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="green-button" href="{{ path('app_add_perso_link') }}">Ajouter un lien</a>
        <a class="red-button" href="{{ path('app_link_index') }}">Retour</a>
    </div>
{% endblock %}
