{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Mes liens techniques</h1>

        <div class="mt-5">
            <a class="green-button" href="{{ path('app_add_tech_link') }}">Ajouter un lien</a>
            <a class="red-button" href="{{ path('app_link_index') }}">Retour</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>URL</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for tech in techs %}
                <tr>
                    <td><p>{{ tech.id }}</p></td>
                    <td><p>{{ tech.name }}</p></td>
                    <td><p>{{ tech.url }}</p></td>
                    <td>
                        <div class="d-flex align-items-center justify-content-start">
                            <a class="green-button" href="{{ path('app_edit_tech_link', {'id': tech.id}) }}"><i class="fa fa-scissors"></i></a>
                            <form method="post" action="{{ path('app_delete_tech_link', {'id': tech.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tech.id) }}">
                                <button class="red-button"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        <h2 class="fst-italic p-3">
                            <i class="fa fa-arrow-down"></i> Commencez par ajouter un lien
                        </h2>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
