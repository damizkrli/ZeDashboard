{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}

    <section>
        <div class="col px-5 pb-5">
            <h1 class="title">
                <i class="fas fa-cogs m-3"></i>
                Mes liens techniques
            </h1>

            <div class="mt-3 mb-3 d-flex align-items-start justify-content-start">
                <div class="mt-5">
                    <a class="button me-5 rounded-3 px-3" href="{{ path('app_add_tech_link') }}"><i
                                class="fas fa-plus-square me-3"></i>Ajouter un lien</a>
                    <a class="button me-5 rounded-3 px-3" href="{{ path('app_link_index') }}"><i
                                class="fas fa-caret-square-left me-3"></i>Retour</a>
                </div>
            </div>

            <table class="table table-borderless">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>URL</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for tech in techs %}
                    <tr>
                        <td><p>{{ tech.id }}</p></td>
                        <td><p>{{ tech.name }}</p></td>
                        <td><p>{{ tech.url }}</p></td>
                        <td>
                            <div class="d-flex justify-content-start">
                                <a href="{{ path('app_edit_tech_link', {'id': tech.id}) }}">
                                    <i class="action fas fa-pen-square me-3"></i>
                                </a>
                                <form method="post" action="{{ path('app_delete_tech_link', {'id': tech.id}) }}"
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tech.id) }}">
                                    <button class="btn border-0 pt-0"><i class="action fas fa-trash"></i></button>
                                </form>
                            </div>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            <h2 class="fst-italic p-3">
                                <i class="fa fa-arrow-down"></i> Commencez par ajouter un lien
                            </h2>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-3 mb-3 d-flex align-items-start justify-content-start">
                <div class="mt-5">
                    <a class="button me-5 rounded-3 px-3" href="{{ path('app_add_tech_link') }}"><i
                                class="fas fa-plus-square me-3"></i>Ajouter un lien</a>
                    <a class="button me-5 rounded-3 px-3" href="{{ path('app_link_index') }}"><i
                                class="fas fa-caret-square-left me-3"></i>Retour</a>
                </div>
            </div>

        </div>
    </section>


{% endblock %}
