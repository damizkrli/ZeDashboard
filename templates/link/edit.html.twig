{% extends 'base.html.twig' %}

{% block title %}{{ link.name }}{% endblock %}

{% block body %}


    <div class="container pb-5">

        <div class="col-12 d-flex justify-content-between border-bottom mt-5 mb-5">
            <h1 class="text-uppercase text-start mb-0">Modifier {{ link.name }}</h1>
        </div>

        <div class="container col-8">
            {{ form_start(form) }}
                {{ form_widget(form) }}
            </div>

            <div class="m-3">
                <div class="col d-flex align-items-center justify-content-center">
                    <button class="button me-5 hover-underline-animation-navbar a-navbar">
                        <i class="fas fa-save me-3"></i>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                    {{ form_end(form) }}
                    <a class="button me-5 hover-underline-animation-navbar a-navbar" href="{{ path('app_link_index') }}">
                        <i class="fas fa-caret-square-left me-3"></i>
                        Retour
                    </a>
                </div>
            </div>

        </div>
    </section>

{% endblock %}


