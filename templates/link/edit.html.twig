{% extends 'base.html.twig' %}

{% block title %}{{ link.name }}{% endblock %}

{% block body %}

    <section>
        <div class="col px-5 pb-5">
            <h1 class="title">
                <i class="fas fa-pen-square me-3"></i>
                Modifier le lien : "<span class="text-decoration-underline">{{ link.name }}</span>"</h1>

            <div class="container col-4">
                {{ form_start(form) }}
                {{ form_widget(form) }}
            </div>

            <div class="m-3">
                <div class="col d-flex align-items-center justify-content-center">
                    <button class="button me-5 rounded-3 px-3">
                        <i class="fas fa-save me-3"></i>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                    {{ form_end(form) }}
                    <a class="button me-5 rounded-3 px-3" href="{{ path('app_link_index') }}">
                        <i class="fas fa-caret-square-left me-3"></i>
                        Retour
                    </a>
                </div>
            </div>

        </div>
    </section>

{% endblock %}


