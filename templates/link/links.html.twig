{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1><i class="fas fa-user-tie me-3"></i>Mes liens professionnels</h1>

        <div class="btn-group mb-3 mt-3">
            <a class="green-button me-3" href="{{ path('app_index_pro_link') }}">Gestion des liens Professionnels</a>
            <a class="red-button" href="{{ path('app_index_home') }}">Retour</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th class="col">#</th>
                <th class="col">Nom</th>
                <th class="col">URL</th>
                <th class="col"></th>
                <th class="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for linksPros in linksPro %}
