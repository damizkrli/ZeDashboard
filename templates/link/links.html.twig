            {% else %}
                <tr>
                    <td colspan="3">Aucuns liens...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="btn-group mb-5">
            <a class="btn btn-sm btn-outline-success me-3 rounded-0" href="{{ path('app_index_pro_link') }}">Gestion des liens Professionnels</a>
            <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_apply_for_index') }}">Retour</a>
