            <tr>
                <th class="text-bg-info">Nom</th>
                <th class="text-bg-info">URL</th>
            </tr>
            </thead>
            <tbody>
            {% for linksPros in linksPro %}
                <tr>
                    <td>{{ linksPros.name }}</td>
                    <td>{{ linksPros.url }}</td>
