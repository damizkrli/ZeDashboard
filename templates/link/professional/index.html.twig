{% extends 'base.html.twig' %}

{% block title %}Mes Liens{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes liens professionnels</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>URL</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for pro in pros %}
                <tr>
                    <td>{{ pro.name }}</td>
                    <td>{{ pro.link }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-start">
                            <a class="btn btn-sm btn-outline-dark me-2 rounded-0" href="{{ path('app_edit_professional_link', {'id': pro.id}) }}">Modifier</a>
                            <form method="post" action="{{ path('app_delete_pro_link', {'id': pro.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pro.id) }}">
                                <button class="btn btn-sm btn-outline-dark rounded-0">Supprimer</button>
                            </form>
                        </div>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        <h2 class="fst-italic p-3" style="color: whitesmoke">
                            <i class="fa fa-arrow-down"></i> Commencez par ajouter un lien
                        </h2>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_add_professional_link') }}">Ajouter un lien</a>
        <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_apply_for_index') }}">Retour</a>
    </div>
{% endblock %}
