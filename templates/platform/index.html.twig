{% extends 'base.html.twig' %}

{% block title %}Platform index{% endblock %}

{% block body %}

    <div class="container">
        <h1>Platform index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for platform in platforms %}
                <tr>
                    <td>{{ platform.name }}</td>
                    <td>{{ platform.website }}</td>
                    <td>
                    <a class="btn btn-sm btn-dark" href="{{ path('app_platform_show', {'id': platform.id}) }}">Voir</a>
                    |
                    <a class="btn btn-sm btn-dark"
                       href="{{ path('app_platform_edit', {'id': platform.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-dark" href="{{ path('app_platform_new') }}">Ajouter une plateforme</a>
    </div>

{% endblock %}
