{% extends 'base.html.twig' %}

{% block title %}Mes plateformes{% endblock %}

{% block body %}

    <div class="section">
        <div class="col px-5 pb-5">

            <h1 class="title"><i class="fas fa-toolbox me-3"></i>Mes Plateformes </h1>

            <div class="mt-3 mb-3 d-flex align-items-center justify-content-center">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_platform_new') }}"><i class="fas fa-plus-square me-3"></i>Ajouter une plateforme</a>
                <a class="button rounded-3 px-3" href="{{ path('app_apply_for_index') }}"><i class="fas fa-caret-square-left me-3"></i>Retour</a>
            </div>

            <div class="d-flex align-item-center justify-content-center">
                <div class="col-4">

                    <table class="table table-borderless">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th class="text-end">Nom</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for platform in platforms %}
                            <tr>
                                <td>{{ platform.id }}</td>
                                <td class="text-end">{{ platform.name }}</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a href="{{ path('app_platform_edit', {'id': platform.id}) }}"><i class="fas fa-pen-square action"></i></a>
                                        <form method="post" action="{{ path('app_platform_delete', {'id': platform.id}) }}"
                                              onsubmit="return confirm('ÃŠtes_vous sur de vouloir supprimer cette candidature ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ platform.id) }}">
                                            <button class="btn border-0 pt-0"><i class="action fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            {% include '/macro/noData.html.twig' %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3 mb-3 d-flex align-items-center justify-content-center">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_platform_new') }}"><i class="fas fa-plus-square me-3"></i>Ajouter une plateforme</a>
                <a class="button rounded-3 px-3" href="{{ path('app_apply_for_index') }}"><i class="me-3 fas fa-caret-square-left"></i>Retour</a>
            </div>

        </div>
    </div>






{% endblock %}
