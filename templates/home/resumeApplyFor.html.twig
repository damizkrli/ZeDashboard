<div class="row">
    <div class="col-12 d-flex justify-content-between border-bottom mt-5 triangle-bottom-left">
        {% if totalApplies > 1 %}
            <h1 class="text-uppercase text-start mb-0">{{ totalApplies }} candidatures</h1>
            <small class="d-flex align-items-end justify-content-end">
                <a class="mini-link" href="{{ path('app_apply_for_index') }}">Voir mes candidatures</a>
            </small>
            {% else %}
                <h1 class="text-uppercase text-start mb-0">{{ totalApplies }} candidature</h1>
                <small class="d-flex align-items-end justify-content-end">
                    <a class="mini-link" href="{{ path('app_apply_for_index') }}">Voir mes candidatures</a>
                </small>
        {% endif %}

    </div>
</div>

<div class="row d-flex align-items-center justify-content-around">

        <div class="card card-apply border-primary mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body ">
                {% if sentApplies > 1 %}
                    <h5 class="card-title">{{ calculatePercentSentApplies }}% transmises</h5>
                    <small class="card-text">{{ sentApplies }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentSentApplies }}% transmises</h5>
                    <small class="card-text">{{ sentApplies }} candidature</small>
                {% endif %}
            </div>
        </div>

        <div class="card card-apply border-info mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body ">
                {% if interviewApplies > 1 %}
                    <h5 class="card-title">{{ calculatePercentInterviewApplies }}% entretiens</h5>
                    <small class="card-text">{{ interviewApplies }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentInterviewApplies }}% entretien</h5>
                    <small class="card-text">{{ interviewApplies }} candidature</small>
                {% endif %}
            </div>
        </div>

        <div class="card card-apply border-warning mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body ">
                {% if numCall > 1 %}
                    <h5 class="card-title">{{ calculatePercentNumberOfCall }}% d'appels</h5>
                    <small class="card-text">{{ numCall }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentNumberOfCall }}% d'appel</h5>
                    <small class="card-text">{{ numCall }} candidature</small>
                {% endif %}
            </div>
        </div>

        <div class="card card-apply border-success mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body ">
                {% if acceptedApplies > 1 %}
                    <h5 class="card-title">{{ calculatePercentAcceptedApplies }}% acceptées</h5>
                    <small class="card-text">{{ acceptedApplies }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentAcceptedApplies }}% acceptée</h5>
                    <small class="card-text">{{ acceptedApplies }} candidature</small>
                {% endif %}
            </div>
        </div>

        <div class="card card-apply border-dark mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body ">
                {% if noResponseApplies > 1 %}
                    <h5 class="card-title">{{ calculatePercentResponseApplies }}% sans réponses</h5>
                    <small class="card-text">{{ noResponseApplies }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentResponseApplies }}% sans réponse</h5>
                    <small class="card-text">{{ noResponseApplies }} candidature</small>
                {% endif %}
            </div>
        </div>

        <div class="card card-apply border-danger mb-3 mt-4 rounded-0" style="max-width: 16rem;">
            <div class="card-body">
                {% if refusedApplies > 1 %}
                    <h5 class="card-title">{{ calculatePercentRefusedApplies }}% refusées</h5>
                    <small class="card-text">{{ refusedApplies }} candidatures</small>
                {% else %}
                    <h5 class="card-title">{{ calculatePercentRefusedApplies }}% refusée</h5>
                    <small class="card-text">{{ refusedApplies }} candidature</small>
                {% endif %}
            </div>
        </div>
    </div>


