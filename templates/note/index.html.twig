{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}


    <div class="container pb-5">

        <div class="col-12 d-flex justify-content-between border-bottom mt-5">
            <h1 class="text-uppercase text-start mb-0">Mes Note</h1>
            <small class="d-flex align-items-end justify-content-end">
                <a class="mini-link" href="{{ path('app_note_new') }}">Pense-bÃªte</a>
            </small>
        </div>

        {% include 'apply_for/searchbar.html.twig' %}

        <table class="table table-borderless mt-5">
                <thead>
                <tr>
                    <th class="col">#</th>
                    <th class="col">Titre</th>
                    <th class="col">Notes</th>
                    <th class="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for note in notes | sort((a, b) => a.name <=> b.name )%}
                    <tr>
                        <td>{{ note.id }}</td>
                        <td>{{ note.name }}</td>
                        <td>{{ note.note | raw }}</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('app_note_edit', {'id': note.id}) }}">
                                    <i class="action fas fa-pen-square me-1"></i>
                                </a>
                                <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                    <button class="btn border-0 pt-0"><i class="action fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune notes...</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>

{% endblock %}
