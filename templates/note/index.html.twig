{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}

    <section>
        <div class="col px-5 pb-5">
            <h1 class="title"><i class="fas fa-sticky-note m-3"></i>Notes</h1>

            <div class="btn-group mb-5">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_note_new') }}">
                    <i class="fas fa-plus-square me-3"></i>
                    Ajouter une note
                </a>
                <a class="button rounded-3 px-3" href="{{ path('app_index_home') }}">
                    <i class="fas fa-caret-square-left me-3"></i>
                    Retour
                </a>
            </div>

            <table class="table table-borderless">
                <thead>
                <tr>
                    <th class="col">#</th>
                    <th class="col">Titre</th>
                    <th class="col">Notes</th>
                    <th class="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for note in notes | sort((a, b) => a.name <=> b.name )%}
                    <tr>
                        <td>{{ note.id }}</td>
                        <td>{{ note.name }}</td>
                        <td>{{ note.note | raw }}</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('app_note_edit', {'id': note.id}) }}">
                                    <i class="action fas fa-pen-square me-1"></i>
                                </a>
                                <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                    <button class="btn border-0 pt-0"><i class="action fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune notes...</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="btn-group mb-5">
                <a class="button me-5 rounded-3 px-3" href="{{ path('app_note_new') }}">
                    <i class="fas fa-plus-square me-3"></i>
                    Ajouter une note
                </a>
                <a class="button rounded-3 px-3" href="{{ path('app_index_home') }}">
                    <i class="fas fa-caret-square-left me-3"></i>
                    Retour
                </a>
            </div>

        </div>
    </section>

{% endblock %}
