{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}
    <div class="container">
        <h1><i class="fas fa-sticky-note m-3"></i>Notes</h1>

        <div class="btn-group mb-5">
            <a class="green-button me-3" href="{{ path('app_note_new') }}">Ajouter une note</a>
            <a class="red-button" href="{{ path('app_index_home') }}">Retour</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th class="col">#</th>
                <th class="col">Titre</th>
                <th class="col">Notes</th>
                <th class="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes | sort((a, b) => a.name <=> b.name )%}
                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.name }}</td>
                    <td>{{ note.note | raw }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <a class="green-button me-2" href="{{ path('app_note_edit', {'id': note.id}) }}"><i class="fa fa-scissors"></i></a>
                            <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                <button class="red-button"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune notes...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
