{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 style="color: #198754">Mes notes</h1>

        <table class="table table-dark table-hover table-bordered border-success">
            <thead>
            <tr>
                <th class="text-bg-info">Titre</th>
                <th class="text-bg-info">Notes</th>
                <th class="text-bg-info">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td>{{ note.name }}</td>
                    <td>{{ note.note | raw }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <a class="button me-2" href="{{ path('app_note_edit', {'id': note.id}) }}"><i class="fa fa-scissors"></i></a>
                            <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                <button class="button"><i class="fas fa-trash"></i></button>
                            </form>
{#                            <a class="button ms-2" href="#">Copier</a>#}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune notes...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="btn-group mb-5">
            <a class="button me-3" href="{{ path('app_note_new') }}">Ajouter une note</a>
            <a class="button" href="{{ path('app_index_home') }}">Retour</a>
        </div>

    </div>
{% endblock %}
