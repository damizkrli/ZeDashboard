{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 style="color: #198754">Mes notes</h1>

        <table class="table table-dark table-hover table-bordered border-success">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td>{{ note.name }}</td>
                    <td>{{ note.note | raw }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <a class="btn btn-sm btn-outline-success me-2 rounded-0" href="{{ path('app_note_edit', {'id': note.id}) }}">Modifier</a>
                            <form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                                <button class="btn btn-sm btn-outline-success rounded-0">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune notes...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="btn-group mb-5">
            <a class="btn btn-sm btn-outline-success me-3 rounded-0" href="{{ path('app_note_new') }}">Ajouter une note</a>
            <a class="btn btn-sm btn-outline-success rounded-0" href="{{ path('app_apply_for_index') }}">Retour</a>
        </div>

    </div>
{% endblock %}
