{% extends 'base.html.twig' %}

{% block title %}{{ note.name }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="col-12 d-flex justify-content-between border-bottom mt-5 mb-5">
            <h1 class="text-uppercase text-start mb-0">{{ note.name }}</h1>
        </div>

        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-sm-10">
                <div class="card card-apply border-dark">
                    <div class="card-body">
                        <p class="card-text">{{ note.note | raw }}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
