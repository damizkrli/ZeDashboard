{% extends 'base.html.twig' %}

{% block title %}Note n°{{ note.id }} - {{ note.name }}{% endblock %}

{% block body %}

    <h1 class="m-5">Note n°{{ note.id }} - {{ note.name }}</h1>

    <div class="container">

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ note.name }}</h5>
                        <p class="card-text">{{ note.note | raw }}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
