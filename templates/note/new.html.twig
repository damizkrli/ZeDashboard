        <h1 class="text-end">Ajouter une note</h1>
        <div class="row">
            <div class="col-8">
                <div class="">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>

        <button class="green-button">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
