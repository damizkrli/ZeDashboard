{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes notes</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for motivation in motivations %}
                <tr>
                    <td>{{ motivation.name }}</td>
                    <td>{{ motivation.letter | raw }}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <a class="btn btn-sm btn-outline-dark me-2 rounded-0" href="{{ path('app_motivation_edit', {'id': motivation.id}) }}">Modifier</a>
                            <form method="post" action="{{ path('app_motivation_delete', {'id': motivation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ motivation.id) }}">
                                <button class="btn btn-sm btn-outline-dark rounded-0">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune notes...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-outline-dark me-3 rounded-0" href="{{ path('app_motivation_new') }}">Ajouter une note</a>
        <a class="btn btn-sm btn-outline-dark rounded-0" href="{{ path('app_apply_for_index') }}">Retour</a>
    </div>
{% endblock %}
